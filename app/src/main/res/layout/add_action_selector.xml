<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#CC000000"
    android:padding="12dp">

    <!-- 双击卡片 -->
    <LinearLayout
        android:id="@+id/cardDoubleClick"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:background="#A8F5C7"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_double_tap"
            android:tint="#333333"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="双击"
            android:textColor="#333333"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 长按卡片 -->
    <LinearLayout
        android:id="@+id/cardLongPress"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:background="#FFE0B2"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_long_press"
            android:tint="#333333"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长按"
            android:textColor="#333333"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 轨迹滑动卡片 -->
    <LinearLayout
        android:id="@+id/cardSwipe"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="#E1BEE7"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_swipe"
            android:tint="#333333"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="轨迹滑动"
            android:textColor="#333333"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
